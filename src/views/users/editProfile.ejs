<!DOCTYPE html>
<html>
        <%- include('../partials/head.ejs') %>
        <link href="/css/registro.css", rel="stylesheet">
    
        
        
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
            <form action="/users/update/profile/<%= user.id %>" method="get" class="form-registro" enctype="multipart/form-data">
                
                <div class="form-control-registro">
                    <label for="first_name">Nombre:</label>
                    <input type="text" name="first_name" id="first_name" value="<%= locals.user && user.first_name? user.first_name : '' %>">
                    <i class="fa-solid fa-circle-check"></i>
                </div>
                
                <div class="form-control-registro">
                    <label for="last_name">Apellido:</label>
                    <input type="text" name="last_name" id="last_name"  value="<%= locals.user && user.last_name? user.last_name : '' %>">
                    <i class="fa-solid fa-circle-check"></i>
                </div>
               
                <div class="form-control-registro">
                    <label for="email">Email:</label>
                    <input type="email" name="email" id="email" value="<%= locals.user && user.email? user.email : '' %>">
                    <i class="fa-solid fa-circle-check"></i>
                </div>
                
                <div class="form-control-registro">
                    <label for="phone">Teléfono:</label>
                    <input type="tel"  name="phone" id="phone"  value="<%= locals.user && user.phone? user.phone : '' %>">
                    <i class="fa-solid fa-circle-check"></i>
                </div>
                
                <div class="form-control-registro">
                    <label for="password">Contraseña:</label>
                    <input type="password" name="password" id="password">
                    <i class="fa-solid fa-circle-check"></i>
                </div> 
                
                <div class="form-control-registro">
                    <label>Subir foto:</label>
                    <input type="file" name="image">
                </div>
    
                <button type="reset" class="delete-button">BORRAR</button>
               
                <div class="form-final-registro">
                <button type="submit" class="create-account">MODIFICAR CUENTA</button>
                
                </div>
            </form>

        </main>
        <%- include('../partials/footer.ejs') %>
    </body>
    </html>
